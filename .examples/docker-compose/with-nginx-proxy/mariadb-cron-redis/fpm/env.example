# Docker
#COMPOSE_PROJECT_NAME=nc

# Domain
SUBDOMAIN_NEXTCLOUD=nextcloud.example.com
SUBDOMAIN_COLLABORA=office.example.com

# MariaDB
MYSQL_ROOT_PASSWORD=<your root password>
MYSQL_PASSWORD=<your user password>

# Nextcloud
NEXTCLOUD_ADMIN_USER=<your admin user>
NEXTCLOUD_ADMIN_PASSWORD=<your admin password>
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.example.com

# Collabora
DOMAIN_COLLABORA=nextcloud\\.example\\.com
DICTIONARIES_COLLABORA=en_GB
#USERNAME_COLLABORA=admin
#PASSWORD_COLLABORA=<your admin password>

# Letsencrypt
LETSENCRYPT_EMAIL=youremail@example.com

# Cloudflare
# Note: only supports a single HOST
# CNAME subdomains do not work, so you have to use a wildcard to catch everything
CLOUDFLARE_ZONE=example.com
CLOUDFLARE_HOST=*.example.com
CLOUDFLARE_EMAIL=youremail@example.com
CLOUDFLARE_API=<yourcloudflareglobalapikey>
